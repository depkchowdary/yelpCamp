<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Add a new campground</h1>
        <div style="width: 30% ; margin: 0 auto">
            <form action="/campgrounds" Method="POST" > 
             <div class="form-group">
                 <input type="input" class="form-control" placeholder="camp name" name="name">
             </div>
            <div class="form-group">
                 <input type="number" class="form-control" placeholder="Price per night" name="price" min="0.01" step="0.01">
             </div>
            <div class="form-group">
                 <input type="text" class="form-control" placeholder="image url" name="image">
             </div>
            <div class="form-group">
                 <input type="text" class="form-control" placeholder="description" name="description">
             </div>
            <div class="form-group">
                 <button class="btn btn-primary btn-block">Add new camp!</button>
             </div>
            </form>
        </div>
    </div>
</div>
